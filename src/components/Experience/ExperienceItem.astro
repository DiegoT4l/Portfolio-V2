---
interface Props {
    title: string;
    date: string;
    description: string;
    link?: string;
}

const { title, date, description, link } = Astro.props;
---

<h3
    class="mb-2 text-2xl font-bold tracking-tight text-blue-200 text-wrap"
>
    {title}
</h3>
<time
    class="mb-1 text-sm font-normal leading-none text-red-200/70"
>
    {date}
</time>
<p class="font-normal text-gray-400 text-pretty">
    {description}
</p>
{
    link && (
        <a
            href={link}
            class="inline-flex items-center mt-4 px-4 py-2 text-sm font-medium text-yellow-200/90 bg-gray-100/5 border border-yellow-200/90 rounded-lg hover:bg-gray-100/10 hover:text-yellow-200/70 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-gray-400"
            target="_blank"
            rel="noopener noreferrer"
            >
            Saber m√°s...
            <svg
                class="w-3 h-3 ms-2 rtl:rotate-180"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 14 10"
            >
                <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M1 5h12m0 0L9 1m4 4L9 9"
                ></path>
            </svg>
        </a>
    
    )
}
